<Window x:Class="WpfApp2.View.DBMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2.View"
        mc:Ignorable="d"
        Title="DBMain" Height="450" Width="800"
         Background="#FFE6D4C3">
    <Grid>
        <Button Content="Координаты поля загрязнения" HorizontalAlignment="Center" Margin="0,85,0,0" VerticalAlignment="Top" Height="47" Width="305" Click="Button_CalcCoord" Background="#FFD4BA9B" FontSize="18" FontWeight="Bold"/>
        <Button Content="Опорные точки" HorizontalAlignment="Center" Margin="0,189,0,0" VerticalAlignment="Top" Height="47" Width="305" Click="Button_RefPoint" Background="#FFD4BA9B" FontSize="18" FontWeight="Bold"/>
        <Button Content="Координаты точек проб" HorizontalAlignment="Center" Margin="0,292,0,0" VerticalAlignment="Top" Height="47" Width="304" Click="Button_SampPointCoord" Background="#FFD4BA9B" FontSize="18" FontWeight="Bold"/>
        <Button Content="Назад" HorizontalAlignment="Left" Margin="24,10,0,0" VerticalAlignment="Top" Height="37" Width="80" Click="Button_Back" Background="#FFD4BA9B" FontSize="18"/>
    </Grid>
</Window>
